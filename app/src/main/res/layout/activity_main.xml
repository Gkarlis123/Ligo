<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:fillViewport="true"
    app:layout_collapseParallaxMultiplier="1.0"
    tools:context="karlis_grintals.ligo.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <ImageView

            android:id="@+id/humanView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/natureView"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:srcCompat="@drawable/human_bg"
            app:layout_constraintHorizontal_bias="1.0" />

        <ImageView
            android:id="@+id/natureView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/fireView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoBlockFragment"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/nature_bg" />

        <ImageView
            android:id="@+id/fireView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/waterView"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/natureView"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/fire_bg" />

        <ImageView
            android:id="@+id/waterView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fireView"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/water_bg" />

        <Button
            android:id="@+id/humanButtonOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:tag="mielasts"
            android:text="MIELASTS"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintDimensionRatio="W,1:2"
            app:layout_constraintRight_toLeftOf="@+id/humanButtonTwo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/humanView"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/humanButtonTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:tag="zilesana"
            android:text="ZĪLĒŠANA"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintDimensionRatio="W,1:2"
            app:layout_constraintLeft_toRightOf="@+id/humanButtonOne"
            app:layout_constraintRight_toLeftOf="@+id/humanButtonThree"
            app:layout_constraintBottom_toBottomOf="@+id/humanView"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/humanButtonThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:tag="ligosana"
            android:text="LĪGOŠANA"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintDimensionRatio="W,1:2"
            app:layout_constraintLeft_toRightOf="@+id/humanButtonTwo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/humanView"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bottom_border"
            android:padding="5dp"
            android:text="CILVĒKS"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/humanButtonTwo"
            app:layout_constraintTop_toTopOf="@+id/humanView"/>

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/infoBlockFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/humanView"
            app:layout_constraintBottom_toTopOf="@+id/natureView"
            app:layout_constraintVertical_chainStyle="packed" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
